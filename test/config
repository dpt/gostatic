# -*- mode: makefile -*-

TEMPLATES = template.tmpl templates
SOURCE = site
OUTPUT = out
PAGE_TEMPLATE = page

*.md:
	config
	ext .html
	directorify
	tags tags/*.tag
	inner-template
	markdown
	template $(PAGE_TEMPLATE)

blog/*.md:
	config
	paginate 2 blog/page*.page
	ext .html
	directorify
	tags tags/*.tag
	inner-template
	markdown
	template page

blog/page*.page: blog/*.md
	ext .html
	directorify
	template listpage
	markdown
	template page

blog/page1.page: blog/*.md blog/page*.page
	rename almost-index.html
	template listpage
	markdown
	template page

blog/index.md: blog/*.md
	config
	rename index.html
	inner-template
	markdown
	template $(PAGE_TEMPLATE)

index.md: blog/index.md
	config
	rename index.html
	inner-template
	markdown
	template $(PAGE_TEMPLATE)

*.less:
	ext .css
	:lessc -

*.html:
	directorify
	template page

*.tag: blog/*.md
	ext .html
	directorify
	template tag
	markdown
	template page

# not working yet
inner/*.src:
	rename ../*.html

about.md:
	config
	ext .html
	markdown
	template page
	relativize
